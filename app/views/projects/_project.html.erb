<%= content_tag_for :li, project do %>
	<%= link_to project.title, project, :class => "title #{'selected' if @project && @project.id == project.id}" %> [<%= project.tasks.length %>]
	<div class="commands">
		<%= link_to 'U', edit_project_path(project), :class => "update", :remote => true %>
		<%= link_to 'D', project, :confirm => "Are you sure delete '#{project.title}' ?", :method => :delete, :class => "delete" %>
	</div>
<% end %>
